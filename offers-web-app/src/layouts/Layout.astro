---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { title = 'Cruise Offers' } = Astro.props;
---

<html lang='en' transition:name='root' transition:animate='fade'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class='bg-white min-h-screen flex flex-col text-gray-900'>
    <header class='bg-gray-900 px-6 py-4 shadow-md'>
      <div class='max-w-6xl mx-auto flex items-center justify-between'>
        <h1 class='text-2xl font-bold font-sans text-amber-400'>
          Cruise Offers
        </h1>
        <nav
          class='space-x-4 text-amber-400 hover:text-amber-300 font-semibold'
        >
          <a href='/' class='hover:underline'>Home</a>
          <a href='/archive' class='hover:underline'>Archive</a>
        </nav>
      </div>
    </header>

    <main class='flex-1 max-w-6xl mx-auto p-6'>
      <slot />
    </main>

    <footer class='bg-gray-100 text-center text-sm text-gray-600 py-4 border-t'>
      Â© {new Date().getFullYear()} Cruise Offers. This site is not affiliated with
      Royal Caribbean International. All trademarks are property of their respective
      owners.
    </footer>
  </body>
</html>
