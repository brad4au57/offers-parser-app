---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title='Page Not Found | Cruise Offers'>
  <div
    class='min-h-[70vh] flex flex-col justify-center items-center space-y-6 text-center'
  >
    <h1 class='text-9xl font-extrabold text-amber-600'>404</h1>
    <h2 class='text-2xl font-semibold'>Oops! This page doesn’t exist.</h2>

    <p class='text-gray-900 max-w-md'>
      The page you're trying to visit may have been moved, deleted, or you might
      have mistyped the offer code.
      <br />
      You'll be redirected to the homepage in <span
        id='countdown'
        class='font-bold text-2xl text-amber-600 animate-fade'>10</span
      > seconds.
    </p>

    <a
      href='/'
      class='mt-4 inline-block bg-gray-900 hover:bg-gray-700 text-amber-400 hover:text-amber-300 font-medium px-6 py-3 rounded-sm shadow-md transition-transform transform hover:scale-105'
    >
      ← Back to Homepage
    </a>
  </div>

  <script type='module'>
    const countdownEl = document.getElementById('countdown');
    let timeLeft = 10;

    function updateCountdown() {
      if (!countdownEl) return;

      // Restart the fade animation
      countdownEl.classList.remove('animate-fade');
      void countdownEl.offsetWidth; // Trigger a reflow to reset animation
      countdownEl.classList.add('animate-fade');

      timeLeft--;
      countdownEl.textContent = String(timeLeft);

      if (timeLeft > 0) {
        setTimeout(updateCountdown, 1000);
      } else {
        window.location.href = '/';
      }
    }

    setTimeout(updateCountdown, 1000);
  </script>
</Layout>
